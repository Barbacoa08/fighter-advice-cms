{
  "version": "1.1.0",
  "name": "fighter-advice-cms",
  "description": "The CMS behind the barbajoe's Fighter Advice app",
  "keywords": [
    "typescript",
    "node",
    "express",
    "payloadcms",
    "payload-cms",
    "northflank",
    "mongodb",
    "mongo-db",
    "mongo-atlas",
    "docker"
  ],
  "main": "dist/server.js",
  "license": "MIT",
  "scripts": {
    "all": "yarn && yarn clean && yarn generate:types && yarn build && yarn generate:graphQLSchema",
    "dev": "cross-env PAYLOAD_CONFIG_PATH=src/payload.config.ts nodemon",
    "start": "yarn dev",
    "clean": "rm -rf dist build src/payload-types.ts src/generated-schema.graphql",
    "build:payload": "cross-env PAYLOAD_CONFIG_PATH=src/payload.config.ts payload build",
    "build:server": "tsc",
    "build": "yarn copyfiles && yarn build:payload && yarn build:server",
    "serve": "cross-env PAYLOAD_CONFIG_PATH=dist/payload.config.js NODE_ENV=production node dist/server.js",
    "copyfiles": "copyfiles -u 1 \"src/**/*.{html,css,scss,ttf,woff,woff2,eot,svg,jpg,png}\" dist/",
    "generate:types": "cross-env PAYLOAD_CONFIG_PATH=src/payload.config.ts payload generate:types",
    "generate:graphQLSchema": "PAYLOAD_CONFIG_PATH=src/payload.config.ts payload generate:graphQLSchema"
  },
  "dependencies": {
    "payload": "1.8.3",
    "dotenv": "16.1.0",
    "express": "4.18.2"
  },
  "devDependencies": {
    "@types/express": "4.17.17",
    "cross-env": "7.0.3",
    "nodemon": "2.0.22",
    "ts-node": "10.9.1",
    "copyfiles": "2.4.1",
    "typescript": "5.0.4"
  }
}
